-- A Lua Make System file

require 'lms.litProgs'

lpTargets = litProgs.targets{
  mainDoc  = 'contests.tex',
  docFiles = {
    'overview.tex',
    'preamble.tex',
    'testSuites.tex',
    'mkivTests.tex',
    'luaTests.tex',
    'cTests.tex',
    'conclusion.tex',
  },
  docDir    = 't-contests/doc/context/third/contests',
}

require 'lms.contextMod'

contextMod.targets(lpTargets, {
  moduleFiles = {
    't-contests.mkiv',
    't-contests.lua',
    't-contests-cTests.lua',
  },
  moduleDir = 't-contests/tex/context/third/contests',
})

require 'lms.contests'

contests.targets(lpTargets, {
  testExecs = {
    'allCTests',
  },
  cHeaderFiles = {
    't-contests.h',
  },
  cCodeFiles = {
  },
  testLibDirs = {
  },
  testLibs = {
  },
})