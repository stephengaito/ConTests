-- A Lua Make System file

lfs = require 'lfs'

lfs.mkdir('build')

require 'lms.litProgs'

litProgs.targets{
  mainDoc  = 'contests.tex',
  docFiles = {
    'overview.tex',
    'preamble.tex',
    'testSuites.tex',
    'mkivTests.tex',
    'luaTests.tex',
    'cTests.tex',
    'conclusion.tex',
  },
  srcFiles = {
    't-contests.mkiv',
    't-contests.lua',
    't-contests.h',
    't-contests-cTests.lua',
    't-contests-templates.lua',
  },
  buildDir  = 'build',
  docDir    = 't-contests/doc/context/third/contests',
  moduleDir = 't-contests/tex/context/third/contests',
}

