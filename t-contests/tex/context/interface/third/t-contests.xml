<?xml version="1.0" encoding="UTF-8"?>

<!-- This is the ConTeXt interface for the t-contests module -->
<!-- We have based the structure of this interface on the t-fancybreak module -->

<cd:interface xmlns:cd="http://www.pragma-ade.com/commands" name="context" language="en" version="2010.06.21">

<cd:command name="loadSuite" generated="yes" file="t-contests.tex">
  <cd:sequence>
    <cd:string value="loadSuite"?> 
  </cd:sequence>
  <cd:arguments>
    <cd:content n="1" optional="no"/>
  </cd:arguments>
</cd:command>

<cd:command name="runConTests" generated="yes" file="t-contests.tex">
  <cd:sequence>
    <cd:string value="runConTests"?> 
  </cd:sequence>
  <cd:arguments>
    <!-- No arguments -->
  </cd:arguments>
</cd:command>

</cd:interface>
